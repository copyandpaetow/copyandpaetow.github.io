---
export interface Props {
	className?: string;
}

const { className = "" } = Astro.props;
---

<aside class=`vhs-player ${className}`>
	<span>Copy and Paetow VHS Player deluxe</span>
</aside>

<style is:global>
	@layer components {
		.vhs-player {
			background: black;
			overflow: hidden;
			border-radius: var(--tv-border-radius);
		}

		.vhs-player span {
			background: var(--tv-background);
			position: absolute;
			inset: calc(var(--vhs-slot-padding) * 2);
			transform: translateY(-100%);
			transition: transform 400ms ease 400ms;
			display: grid;
			place-content: center;
			font-weight: bold;
		}
	}
</style>
