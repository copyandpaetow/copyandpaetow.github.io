---
import Up from "../icons/up.svg?raw";

export interface Props {
	className?: string;
}

const { className = "" } = Astro.props;
---

<button class=`screen-back-button ${className}`>
	<slot>
		<Fragment set:html={Up} /> back
	</slot>
</button>

<style is:global>
	@layer components {
		.screen-back-button {
			display: grid;
			grid-template-columns: max-content 1fr;
			align-items: center;
			z-index: 2;
			width: max-content;

			& svg {
				transform: rotate(-90deg);
				aspect-ratio: 1;
				width: 1.5rem;
			}

			@media (scripting: none) {
				display: none;
			}
		}
	}
</style>
