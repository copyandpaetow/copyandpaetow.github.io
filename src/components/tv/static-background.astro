---
export interface Props {
	className?: string;
}

const { className } = Astro.props;
---

<svg
	xmlns="http://www.w3.org/2000/svg"
	width="100%"
	height="100%"
	{...className && { class: className }}
>
	<filter id="noiseFilter">
		<feTurbulence baseFrequency=".5" seed="0" type="fractalNoise" result="static">
			<animate
				attributeName="seed"
				values="0;100"
				dur="1000ms"
				repeatCount="indefinite"
				begin="controls-eject.change"></animate>
		</feTurbulence>
	</filter>
	<rect width="100%" height="100%" filter="url(#noiseFilter)"></rect>
</svg>

<style is:global>
	@layer components {
	}
</style>
