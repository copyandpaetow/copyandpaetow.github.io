---
import "../styles/styles.css";
import Menu from "../features/tv/remote/menu.astro";

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="copyandpaetow" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<main class="screen-text vcr-lines screen-content-layout">
			<button popovertarget="remote-modal">open settings in the style of a remote</button>
			<popover-helper type="modal">
				<dialog id="remote-modal" popover class="scene remote-modal">
					<Menu />
				</dialog>
			</popover-helper>
			<slot />
		</main>
	</body>
</html>

<style is:global>
	@layer components {
		main {
			--save-screen-padding: 10%;

			& > button {
				grid-area: 1 / 1/ 2/ 4;
			}
		}

		.vcr-lines:where(::after, ::before) {
			display: block;
			position: sticky;
			top: 0;
			height: 100dvh;
			z-index: 0;
		}
	}
</style>
