---
import "../styles/styles.css";
import Menu from "../features/tv/menu/menu.astro";

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="copyandpaetow" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="screen-root">
		<slot name="header" />
		<main>
			<!--@ts-expect-error popovertargetaction is to new? -->
			<button popovertarget="remote-modal" popovertargetaction="show"
				>open settings in the style of a remote</button
			>
			<popover-helper type="modal">
				<dialog id="remote-modal" popover class="scene remote-modal">
					<Menu />
				</dialog>
			</popover-helper>
			<slot />
		</main>
		<slot name="footer" />
	</body>
</html>

<style is:global>
	@layer components {
		main {
			--save-screen-padding: 10%;

			display: grid;
			grid-template-columns:
				[full-screen-start] var(--save-screen-padding)
				[save-screen-start] 1fr
				[save-screen-end] var(--save-screen-padding)
				[full-screen-end];
			grid-template-rows: 3rem;
			grid-auto-rows: max-content;

			:where(&) > :where(*) {
				grid-column: save-screen;
			}
		}

		.screen-root::after,
		.screen-root::before {
			position: fixed;
			inset: 0;
			width: 100%;
			height: 100svh;
		}

		.tertiary-menu {
			--dialog-z-index: 3;
		}
	}
</style>
